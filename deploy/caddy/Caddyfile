{
  email {$LETSENCRYPT_EMAIL}
}

{$CADDY_SITE} {
  encode zstd gzip

  header {
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "no-referrer"
    Permissions-Policy "geolocation=(), microphone=(), camera=()"
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Content-Security-Policy "default-src 'self'; script-src 'self' blob: 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: blob:; font-src 'self' https://fonts.gstatic.com data:; connect-src 'self'; frame-src 'self' blob:; frame-ancestors 'none'; base-uri 'self'; form-action 'self'"
    X-XSS-Protection "1; mode=block"
    -Server
  }

  @api path /api/* /docs* /openapi.json /redoc* /healthz /readyz /version
  handle @api {
    reverse_proxy api:8000
  }

  handle {
    reverse_proxy frontend:80
  }
}
