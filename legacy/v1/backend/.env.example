# Zen Ops backend environment variables

# PostgreSQL database (local Mac default)
# Create with: createdb zenops
DATABASE_URL=postgresql+psycopg2://postgres@localhost:5432/zenops

# JWT configuration
JWT_SECRET=change_me_super_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Storage
UPLOAD_DIR=./uploads

# CORS (JSON list or comma-separated string)
# JSON-safe example:
# ALLOW_ORIGINS=["http://localhost","http://localhost:5173","http://127.0.0.1:5173"]
ALLOW_ORIGINS=["http://localhost","http://localhost:5173","http://127.0.0.1:5173"]

# V1 -> V2 Studio billing handshake
# Accepts base host with or without /v1 suffix, example:
# STUDIO_BASE_URL=https://api-zenops.notalonestudios.com
STUDIO_BASE_URL=
STUDIO_SERVICE_TOKEN=
DEFAULT_BILLING_MODE=POSTPAID
STUDIO_HTTP_TIMEOUT_SECONDS=5
STUDIO_STATUS_CACHE_SECONDS=45
