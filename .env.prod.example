NODE_ENV=production
LOG_LEVEL=info

WEB_HOST=zenops.notalonestudios.com
API_HOST=api-zenops.notalonestudios.com
STUDIO_HOST=studio-zenops.notalonestudios.com
PORTAL_HOST=portal-zenops.notalonestudios.com
TRAEFIK_DASHBOARD_HOST=traefik-zenops.notalonestudios.com
ACME_EMAIL=ops@notalonestudios.com
TRAEFIK_LOG_LEVEL=INFO

# Generate with: htpasswd -nb admin "<password>" | sed -e s/\$/\$\$/g
BASIC_AUTH_USERS=admin:$$apr1$$replace$$replace
WEBHOOKS_EDGE_MIDDLEWARES=zenops-basic-auth

POSTGRES_PASSWORD=replace-with-strong-password
REDIS_URL=redis://redis:6379

ZENOPS_MULTI_TENANT_ENABLED=false
ZENOPS_INTERNAL_TENANT_ID=11111111-1111-1111-1111-111111111111
ZENOPS_EXTERNAL_TENANT_ID=22222222-2222-2222-2222-222222222222
JWT_SECRET=replace-with-32-char-min-secret
STUDIO_ADMIN_TOKEN=replace-with-temporary-studio-admin-token
CONTROL_RATE_LIMIT_RPM=180
BILLING_RESERVATION_TIMEOUT_MINUTES=1440
BILLING_REFILL_LIMIT=150
BILLING_RECONCILE_LIMIT=250
BILLING_RECONCILE_TIMEOUT_MINUTES=90
CREDIT_TOPUP_UNIT_PRICE=1
PAYMENT_WEBHOOK_DEV_BYPASS=false
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

DATABASE_URL_API=postgresql://zen_api:zen_api@postgres:5432/zenops
DATABASE_URL_WORKER=postgresql://zen_worker:zen_worker@postgres:5432/zenops
DATABASE_URL_ROOT=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/zenops

ARTIFACTS_DIR=/var/zenops/artifacts
WORKER_CONCURRENCY=4

WEBHOOKS_ENABLED=false
TWILIO_WEBHOOK_VALIDATE=
SENDGRID_WEBHOOK_VALIDATE=
MAILGUN_WEBHOOK_VALIDATE=

NOTIFY_PROVIDER_EMAIL=noop
NOTIFY_PROVIDER_WHATSAPP=noop
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM=
MAILGUN_WEBHOOK_SIGNING_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# Object storage (recommended for production)
STORAGE_DRIVER=s3
S3_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
S3_REGION=auto
S3_BUCKET=zenops-prod
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=true
S3_PUBLIC_BASE_URL=

# Optional image references when pulling versioned artifacts
ZENOPS_API_IMAGE=ghcr.io/ramrk47/zenops-api:latest
ZENOPS_WORKER_IMAGE=ghcr.io/ramrk47/zenops-worker:latest
ZENOPS_WEB_IMAGE=ghcr.io/ramrk47/zenops-web:latest
ZENOPS_STUDIO_IMAGE=ghcr.io/ramrk47/zenops-studio:latest
ZENOPS_PORTAL_IMAGE=ghcr.io/ramrk47/zenops-portal:latest
